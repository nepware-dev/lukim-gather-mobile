{
    "extends": "@react-native/typescript-config/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ],
            "@generated/*": [
                "src/generated/*"
            ],
            "@rna/*": [
                "src/vendor/react-native-arsenal/lib/*"
            ]
        },
        "skipLibCheck": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src", "declaration.d.ts"]
}
