{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "es2017"
        ],
        "allowJs": true,
        "jsx": "react-native",
        "declaration": true,
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ],
            "@generated/*": [
                "src/generated/*"
            ],
            "@rna/*": [
                "src/vendor/react-native-arsenal/lib/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src", "declaration.d.ts"],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
